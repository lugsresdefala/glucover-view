# Server
PORT=5000
NODE_ENV=production
SESSION_SECRET=GENERATE_A_SECURE_KEY
SESSION_COOKIE_SECURE=false

# Database (use any Postgres provider, e.g. Neon/Supabase free tier)
DATABASE_URL=postgresql://user:password@host:5432/database

# Allow a separate frontend domain (comma separated)
ALLOWED_ORIGINS=https://your-frontend.vercel.app

# Optional AI provider (falls back to deterministic output when unset)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1

# Frontend-only (set when deploying client separately, e.g. on Vercel)
VITE_API_BASE_URL=https://your-backend.example.com
